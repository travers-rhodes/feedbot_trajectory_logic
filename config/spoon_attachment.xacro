<?xml version="1.0"?>
<robot name="tool_to_spoon_model" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- transformation from tool_frame to spoon_tip_frame-->
  <xacro:macro name="tool_to_spoon" params="prefix"> 
    <!-- Tool frame used by the arm --> 
    <link name="${prefix}spoon_tip_frame"/> 
    <joint name="${prefix}spoon_tip_joint" type="fixed"> 
        <origin xyz="0.0 0.0 0.130" rpy="0 0 0" /> 
        <parent link="${prefix}tool_frame" /> 
        <child link="${prefix}spoon_tip_frame" /> 
        <axis xyz="0 0 0" /> 
    </joint>
  </xacro:macro>
</robot>

